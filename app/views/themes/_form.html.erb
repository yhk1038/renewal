
<%= simple_form_for(@theme) do |f| %>
    <%= f.error_notification %>

    <% grid     = {left: 'col-sm-4', right: 'col-sm-8'} %>
    <% offset   = {left: 'col-sm-offset-4', right: 'col-sm-8'} %>

    <%= grid_input 'text',   @theme, :title,          options: {label_text: '<b>제목</b>',     grid: grid, required: true } %>
    <%= grid_input 'text',   @theme, :background_img, options: {label_text: '배경 이미지 Url',   grid: grid, required: false } %>

    <%= grid_input 'select', @theme, :user_id,        options: {label_text: '작성자(나)',       grid: grid, required: true, disabled: true, value: current_user.id} %>
    <%= grid_input 'select', @theme, :theme_group_id, options: {label_text: '테마',            grid: grid, required: true } %>

    <%= grid_submit '저장', {grid: offset, class: {btn: 'btn btn-default bgm-indigo', grid: 'text-right'}} %>

<% end %>
