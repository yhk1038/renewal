<header id="header" class="clearfix <%= 'transparent' if @navbar_transparent %>" data-current-skin="blue">

    <ul class="header-inner">

        <li class="logo hidden-xs">
            <%= link_to root_path do %>
                <%= $appname %>
            <% end %>
        </li>

        <li class="p-l-15">
            <ul class="top-menu">
                <li class="link">
                    <%= link_to themes_path do %>
                        <span class="tm-text">테마</span>
                    <% end %>
                </li>
                <li class="link">
                    <a href="#">
                        <span class="tm-text">추천</span>
                    </a>
                </li>
            </ul>
        </li>

        <li class="pull-right">
            <ul class="top-menu">

                <% if user_signed_in? %>
                    <li class="link">
                        <a href="<%= my_page_path %>">
                            <span class="tm-text"><%= current_user.name %></span>
                            <div class="pf_img" style="background-image: url(<%= current_user.profile_img %>)"></div>
                        </a>
                    </li>
                <% else %>
                    <li class="link no-hover">
                        <%= link_to '', data: {toggle: 'modal', target: '#loginModal'} do %>
                            <span class="tm-text">로그인</span>
                        <% end %>
                    </li>
                <% end %>

                <li id="top-search" class="no-hover">
                    <a href="" data-toggle="modal" data-target="#searchModal"><i class="tm-icon zmdi zmdi-search"></i></a>
                </li>

                <li class="dropdown no-hover">
                    <a data-toggle="dropdown" href=""><i class="tm-icon zmdi zmdi-more-vert"></i></a>
                    <ul class="dropdown-menu dm-icon pull-right">
                        <li>
                            <a href=""><i class="zmdi zmdi-settings"></i> 파트너쉽</a>
                        </li>
                        <li>
                            <a href=""><i class="zmdi zmdi-settings"></i> 문의하기</a>
                        </li>
                        <li>
                            <a href=""><i class="zmdi zmdi-settings"></i> 공지사항</a>
                        </li>
                        <% if user_signed_in? %>
                        <li class="divider hidden-xs"></li>
                        <li>
                            <a href="<%= destroy_user_session_path %>"><i class="zmdi zmdi-settings"></i> 로그아웃</a>
                        </li>
                        <% end %>
                    </ul>
                </li>

            </ul>
        </li>
    </ul>
</header>