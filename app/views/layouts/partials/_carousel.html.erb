<div id="carousel-ground" class="carousel slide carousel-fade" data-ride="carousel">

    <!-- Indicators // such as cover_bg -->
    <ol class="carousel-indicators">
        <% @carousels.each_with_index do |item, i| %>
            <li data-target="#carousel-ground" data-slide-to="<%= i %>" class="<%= 'active' if i.zero? %>"></li>
        <% end %>
    </ol>

    <!-- Wrapper for slides // such as vod_container -->
    <div class="carousel-inner p-fixed" role="listbox">

        <% @carousels.each_with_index do |item, i| %>
            <div class="item <%= 'active' if i.zero? %>">
                <img src="<%= item[:background_img] %>" alt="...">
                <div class="carousel-caption"><span></span></div>
                <div class="carousel-gradation"><span></span></div>
                <div class="carousel-info">
                    <div class="container">
                        <div class="row p-lr-60">
                            <div class="col-xs-12">
                                <div class="carousel-info-thumbnail-img">
                                    <div class="imgbody" style="background-image: url('<%= item[:background_img] %>')"></div>
                                    <div class="imgbody-cover"></div>
                                </div>
                                <div class="carousel-info-thumbnail-info">
                                    <p class="carousel-info-label"><%= carousel_text(item[:about]) %></p>
                                    <p class="carousel-info-title"><a href="<%= item[:href] %>" target="_blank"><%= item[:title] %></a></p>
                                    <p class="carousel-info-subtitle"><%= carousel_text(item[:subtitle]) %></p>
                                    <div class="carousel-info-others">
                                        <%= carousel_text(item[:produce]) %>
                                        <%= carousel_text(item[:when]) %><%= carousel_text(item[:where]) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>

    </div>

    <% if @carousels.count > 1 %>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-ground" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-ground" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    <% end %>
</div>